
FROM ubuntu:latest

RUN apt-get update && apt-get install -y \
    curl \
    wget \
    vim \
    keepalived \
    net-tools \
    iputils-ping \
    && rm -rf /var/lib/apt/lists/*

COPY ./keepalived.tmpl /etc/keepalived/keepalived.tmpl

COPY ./yurtlb-agent /usr/local/bin/yurtlb-agent
ENTRYPOINT ["/usr/local/bin/yurtlb-agent"]